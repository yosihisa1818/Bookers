<h2>Editing Book</h2>
<% if @book.errors.any? %>
  <ul>
      <h3>There are <%= @book.errors.count %> errors</h3>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
  </ul>
<% end %>
<%= form_with model: @book, local:true do |b| %>
<p>Title</p>
<%= b.text_field :title %>
<p>Body</p>
<%= b.text_field :body %><br>
<%= b.submit "Update Book" %>
<% end %>

<p>
  <%= link_to "Show", book_path(@book.id) %>
  <%= link_to "Back", books_path %>
</p>